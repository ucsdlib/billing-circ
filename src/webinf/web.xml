  <!-- REFERENCES -->
  <resource-ref>
    <description>act db2 lib info</description>
    <res-ref-name>db2</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <resource-ref>
    <description>local Oracle billing DB</description>
    <res-ref-name>billing</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <resource-ref>
    <description>libnet db</description>
    <res-ref-name>libnet</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <resource-ref>
    <description>Environment Variable</description>
    <res-ref-name>clusterHostName</res-ref-name>
    <res-type>java.lang.String</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <resource-ref>
    <description>Environment Variable</description>
    <res-ref-name>clusterSharedPath</res-ref-name>
    <res-type>java.lang.String</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <resource-ref>
    <description>Remote FTP/SSL Server hostname</description>
    <res-ref-name>billingServer/hostname</res-ref-name>
    <res-type>java.lang.String</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <resource-ref>
    <description>Remote FTP/SSL Server username</description>
    <res-ref-name>billingServer/username</res-ref-name>
    <res-type>java.lang.String</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <resource-ref>
    <description>Remote FTP/SSL Server password</description>
    <res-ref-name>billingServer/password</res-ref-name>
    <res-type>java.lang.String</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <resource-ref>
    <description>Remote FTP/SSL Server path</description>
    <res-ref-name>billingServer/path</res-ref-name>
    <res-type>java.lang.String</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <!-- SECURITY -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Protected Area</web-resource-name>
      <url-pattern>/*</url-pattern>
      <http-method>DELETE</http-method>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
      <http-method>PUT</http-method>
    </web-resource-collection>
    <auth-constraint>
      <description>Users in the AD Billing - Circ Group</description>
      <role-name>Billing - Circ</role-name>
      <role-name>IT Development</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>CONFIDENTIAL</transport-guarantee>
    </user-data-constraint>
  </security-constraint>
  <!-- LOGIN -->
    <login-config>        
        <auth-method>FORM</auth-method>
        <realm-name>Authentication Required</realm-name>
        <form-login-config>
            <form-login-page>/login/login.jsp</form-login-page>
            <form-error-page>/login/error.jsp</form-error-page>
        </form-login-config>
    </login-config>
  <!-- AD ROLES -->
  <security-role>
    <role-name>Billing - Circ</role-name>
    <role-name>IT Development</role-name>
  </security-role>

  <distributable/>
</web-app>
